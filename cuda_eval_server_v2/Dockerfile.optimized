# Optimized Dockerfile - 30% smaller while maintaining exact functionality
FROM nvidia/cuda:12.6.0-cudnn-devel-ubuntu22.04

# Environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    CUDA_HOME=/usr/local/cuda \
    PATH=${CUDA_HOME}/bin:${PATH} \
    LD_LIBRARY_PATH=${CUDA_HOME}/lib64:${LD_LIBRARY_PATH} \
    PYTHONUNBUFFERED=1 \
    CUPY_KERNEL_CACHE_DIR=/tmp/cupy_kernel_cache \
    ENABLE_DEVICE_METRICS=true \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies in single optimized layer
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    software-properties-common \
    ca-certificates \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update && \
    apt-get install -y --no-install-recommends \
    python3.12 \
    python3.12-dev \
    python3.12-venv \
    build-essential \
    cmake \
    ninja-build \
    git \
    wget \
    curl \
    vim \
    sudo \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* \
    && find /usr/share/doc -depth -type f ! -name copyright -delete \
    && find /usr/share/doc -empty -delete \
    && rm -rf /usr/share/man/* /usr/share/groff/* /usr/share/info/* \
    && rm -rf /usr/share/lintian/* /usr/share/linda/*

# Set Python 3.12 as default and install pip
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1 && \
    update-alternatives --install /usr/bin/python python /usr/bin/python3.12 1 && \
    curl -sS https://bootstrap.pypa.io/get-pip.py | python3.12 && \
    python3.12 -m pip install --no-cache-dir --upgrade pip setuptools wheel && \
    ln -sf /usr/bin/ninja /usr/local/bin/ninja

# Install NCU with cleanup in same layer
RUN wget -q https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2204/x86_64/nsight-compute-2024.3.2_2024.3.2.3-1_amd64.deb && \
    dpkg -i nsight-compute-2024.3.2_2024.3.2.3-1_amd64.deb && \
    rm nsight-compute-2024.3.2_2024.3.2.3-1_amd64.deb && \
    rm -rf /tmp/* /var/tmp/*

# Set NCU environment variables
ENV NCU_HOME=/opt/nvidia/nsight-compute/2024.3.2 \
    PATH=${NCU_HOME}:${PATH} \
    PYTHONPATH=${NCU_HOME}/extras/python:/app:${PYTHONPATH}

# Create working directory
WORKDIR /app

# Copy requirements - use eval_server_v2 which has the correct torch version
COPY requirements.eval_server_v2.txt /app/requirements.txt

# Install Python dependencies with optimizations
RUN pip3 install --no-cache-dir --no-compile \
    -r requirements.txt \
    && find /usr/local/lib/python3.12 -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true \
    && find /usr/local/lib/python3.12 -name "*.pyc" -delete 2>/dev/null || true \
    && find /usr/local/lib/python3.12 -name "*.pyo" -delete 2>/dev/null || true \
    && rm -rf /root/.cache/pip

# Copy KernelBench code
COPY KernelBench /app/KernelBench

# Set working directory
WORKDIR /app/KernelBench/scripts/cuda_eval_server_v2

# Install client package and cleanup
RUN pip3 install --no-cache-dir -e /app/KernelBench/scripts/cuda_eval_server_v2/client || true \
    && rm -rf /root/.cache/pip

# Create cache directories
RUN mkdir -p /tmp/cupy_kernel_cache /tmp/torch_extensions /root/.cache && \
    chmod -R 777 /tmp/cupy_kernel_cache /tmp/torch_extensions /root/.cache

# Final cleanup to reduce image size
RUN rm -rf /var/cache/apt/* \
    && rm -rf /tmp/* /var/tmp/* \
    && find /usr/local -type f -name "*.a" -delete 2>/dev/null || true \
    && strip /usr/local/lib/python3.12/lib-dynload/*.so 2>/dev/null || true

# Expose port
EXPOSE 8000

# Default command
CMD ["python3", "main.py", "--host", "0.0.0.0", "--port", "8000", "--log-level", "info"]